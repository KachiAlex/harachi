rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function userHasRole(role) {
      return isAuthenticated() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.hasAny([role]);
    }

    function isSuperAdmin() {
      return userHasRole('Super Admin');
    }

    function isCompanyAdmin() {
      return userHasRole('Company Admin');
    }
    
    function isUserInCompany(companyId) {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId == companyId;
    }
    
    // Global collections
    match /companies/{companyId} {
      allow read, write: if isSuperAdmin();
      allow read: if isUserInCompany(companyId);
      
      // Company subcollections
      match /countries/{countryId} {
        allow read, write: if isSuperAdmin() || isUserInCompany(companyId);
      }
      
      match /branches/{branchId} {
        allow read, write: if isSuperAdmin() || isUserInCompany(companyId);
      }
      
      match /users/{userId} {
        allow read, write: if isSuperAdmin() || isUserInCompany(companyId);
      }
      
      match /inventory/{itemId} {
        allow read: if isUserInCompany(companyId);
        allow write: if isSuperAdmin() || isCompanyAdmin() || userHasRole('Branch Admin') && isUserInCompany(companyId);
      }
      
      match /transactions/{transactionId} {
        allow read, write: if isSuperAdmin() || isUserInCompany(companyId);
      }
      
      match /finance/{entryId} {
        allow read, write: if isSuperAdmin() || isUserInCompany(companyId);
      }
    }
    
    // Users collection
    match /users/{userId} {
      allow read, write: if isSuperAdmin();
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
      allow read: if isAuthenticated() && isUserInCompany(resource.data.companyId);
      
      // User roles subcollection
      match /roles/{roleId} {
        allow read, write: if isSuperAdmin();
        allow read: if isAuthenticated() && request.auth.uid == userId;
      }
    }
    
    // Company licenses (readable by Super Admin and Company Admins of that company)
    match /companies/{companyId}/licenses/{licenseId} {
      allow read: if isSuperAdmin() || isUserInCompany(companyId);
      allow write: if isSuperAdmin();
    }

  // Units of Measure
  match /companies/{companyId}/uoms/{uomId} {
    allow read: if isUserInCompany(companyId);
    allow write: if isSuperAdmin() || isCompanyAdmin();
  }

    // Audit logs (read-only for admins)
    match /audit_logs/{logId} {
      allow read: if isSuperAdmin() || isCompanyAdmin();
    }
  }
}