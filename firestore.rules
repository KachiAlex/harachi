rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function userHasRole(role) {
      return isAuthenticated() && 
        getUserData().roles != null && 
        getUserData().roles.hasAny([role]);
    }

    function isSuperAdmin() {
      return userHasRole('Super Admin');
    }

    function isCompanyAdmin() {
      return userHasRole('Company Admin');
    }
    
    function isBranchManager() {
      return userHasRole('Branch Manager');
    }
    
    function isUserInCompany(companyId) {
      return isAuthenticated() && 
        getUserData().companyId == companyId;
    }
    
    function isUserActive() {
      return isAuthenticated() && 
        getUserData().isActive == true;
    }
    
    // Global collections
    match /companies/{companyId} {
      allow read, write: if isSuperAdmin();
      // Allow read access for company portal and setup wizard
      allow read: if true;
      // Allow write during setup (when company is not yet complete) or for authenticated admins
      allow write: if !resource.data.isSetupComplete || (isUserActive() && isUserInCompany(companyId) && isCompanyAdmin());
      
      // Company subcollections
      match /countries/{countryId} {
        allow read: if true; // Allow read for company portal
        allow write: if !get(/databases/$(database)/documents/companies/$(companyId)).data.isSetupComplete || (isUserActive() && isUserInCompany(companyId) && (isCompanyAdmin() || isBranchManager()));
      }
      
      match /branches/{branchId} {
        allow read: if true; // Allow read for company portal
        allow write: if !get(/databases/$(database)/documents/companies/$(companyId)).data.isSetupComplete || (isUserActive() && isUserInCompany(companyId) && (isCompanyAdmin() || isBranchManager()));
      }
      
      match /users/{userId} {
        allow read: if true; // Allow read for company portal
        allow write: if !get(/databases/$(database)/documents/companies/$(companyId)).data.isSetupComplete || (isUserActive() && isUserInCompany(companyId) && isCompanyAdmin());
      }
      
      match /inventory/{itemId} {
        allow read: if isUserActive() && isUserInCompany(companyId);
        allow write: if isUserActive() && isUserInCompany(companyId) && (isCompanyAdmin() || isBranchManager());
      }
      
      match /transactions/{transactionId} {
        allow read: if isUserActive() && isUserInCompany(companyId);
        allow write: if isUserActive() && isUserInCompany(companyId) && (isCompanyAdmin() || isBranchManager());
      }
      
      match /finance/{entryId} {
        allow read: if isUserActive() && isUserInCompany(companyId);
        allow write: if isUserActive() && isUserInCompany(companyId) && isCompanyAdmin();
      }
    }
    
    // Users collection
    match /users/{userId} {
      allow read, write: if isSuperAdmin();
      allow read, write: if isUserActive() && request.auth.uid == userId;
      allow read: if true; // Allow read for authentication and company portal
      allow write: if isUserActive() && isUserInCompany(resource.data.companyId) && isCompanyAdmin();
      
      // User roles subcollection
      match /roles/{roleId} {
        allow read, write: if isSuperAdmin();
        allow read: if isUserActive() && request.auth.uid == userId;
        allow write: if isUserActive() && isUserInCompany(getUserData().companyId) && isCompanyAdmin();
      }
    }
    
    // Company licenses (readable by Super Admin and Company Admins of that company)
    match /companies/{companyId}/licenses/{licenseId} {
      allow read: if isSuperAdmin() || isUserInCompany(companyId);
      allow write: if isSuperAdmin();
    }

  // Units of Measure
  match /companies/{companyId}/uoms/{uomId} {
    allow read: if isUserInCompany(companyId);
    allow write: if isSuperAdmin() || isCompanyAdmin();
  }

    // Audit logs (read-only for admins)
    match /audit_logs/{logId} {
      allow read: if isSuperAdmin() || isCompanyAdmin();
    }
  }
}