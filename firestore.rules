rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isSuperAdmin() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)/roles/$(request.auth.uid + '_super_admin'));
    }
    
    function isCompanyAdmin() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)/roles/$(request.auth.uid + '_company_admin'));
    }
    
    function isUserInCompany(companyId) {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId == companyId;
    }
    
    // Global collections
    match /companies/{companyId} {
      allow read, write: if isSuperAdmin();
      allow read: if isUserInCompany(companyId);
      
      // Company subcollections
      match /countries/{countryId} {
        allow read, write: if isSuperAdmin() || isUserInCompany(companyId);
      }
      
      match /branches/{branchId} {
        allow read, write: if isSuperAdmin() || isUserInCompany(companyId);
      }
      
      match /users/{userId} {
        allow read, write: if isSuperAdmin() || isUserInCompany(companyId);
      }
      
      match /inventory/{itemId} {
        allow read, write: if isSuperAdmin() || isUserInCompany(companyId);
      }
      
      match /transactions/{transactionId} {
        allow read, write: if isSuperAdmin() || isUserInCompany(companyId);
      }
      
      match /finance/{entryId} {
        allow read, write: if isSuperAdmin() || isUserInCompany(companyId);
      }
    }
    
    // Users collection
    match /users/{userId} {
      allow read, write: if isSuperAdmin();
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
      allow read: if isAuthenticated() && isUserInCompany(resource.data.companyId);
      
      // User roles subcollection
      match /roles/{roleId} {
        allow read, write: if isSuperAdmin();
        allow read: if isAuthenticated() && request.auth.uid == userId;
      }
    }
    
    // Audit logs (read-only for admins)
    match /audit_logs/{logId} {
      allow read: if isSuperAdmin() || isCompanyAdmin();
    }
  }
}